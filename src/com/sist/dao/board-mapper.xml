<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.dao.board-mapper">
	<sql id="where-no">
		WHERE no=#{no}
	</sql>
	<insert id="insertUser" parameterType="User">
		INSERT INTO onmuser VALUES(seq_no.NEXTVAL,#{email},#{nickname},#{pwd},SYSDATE,1)
	</insert>
	
	<!-- 회원가입 중복확인 -->
	<select id="confirmEmail" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM onmuser where email=#{email}
	</select>
	
	<!-- 로그인 Mapper (email,pwd Check) -->
	<select id="emailCheck" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM onmuser WHERE email=#{email}
	</select>
	<select id="pwdCheck" parameterType="String" resultType="User">
		SELECT no,nickname,pwd FROM onmuser WHERE email=#{email}
	</select>
	<select id="listSearch"  resultType="Olist" parameterType="int">
		SELECT title,html FROM onmlist WHERE userno=#{userno} ORDER BY no
	</select>
		<insert id="listInsert" parameterType="int">
		INSERT INTO onmlist VALUES(seq_ol.nextval,#{userno},'test','test')
	</insert>
	<select id="getListNo" resultType="int">
		SELECT MAX(no) FROM onmlist 
 	</select>
	<delete id="listDelete" parameterType="int">
		DELETE FROM onmlist WHERE no=#{no}
	</delete>
	<update id="listAdd" parameterType="Olist">
		UPDATE onmlist SET
		title=#{title},
		html=#{html}
		WHERE no=#{no}
	</update>
	
	
	
</mapper>








