<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.dao.board-mapper">
	<sql id="where-no">
		WHERE no=#{no}
	</sql>
	<insert id="insertUser" parameterType="User">
		INSERT INTO userdto VALUES(seq_no.NEXTVAL,#{email},#{pwd},SYSDATE)
	</insert>
	<select id="confirmEmail" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM UserDTO where email=#{email}
	</select>
	<select id="emailCheck" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM userDTO WHERE email=#{email}
	</select>
	<select id="pwdCheck" parameterType="User" resultType="String">
		SELECT pwd,no FROM userdto WHERE email=#{email}
	</select>
	<insert id="listInsert" parameterType="Olist">
		INSERT INTO onmlist VALUES(seq_ol.nextval,2,#{title},#{html})
	</insert>
	<select id="listSearch"  resultType="String">
		SELECT html FROM onmlist WHERE no=2
	</select>

	
</mapper>








