<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
<mapper namespace="com.dao.board-mapper">
	<sql id="where-no">
		WHERE no=#{no}
	</sql>
	<insert id="insertUser" parameterType="User">
		INSERT INTO UserDTO VALUES(seq_no.NEXTVAL,#{email},#{nickname},#{pwd},SYSDATE,1)
	</insert>
	
	<!-- 회원가입 중복확인 -->
	<select id="confirmEmail" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM UserDTO where email=#{email}
	</select>
	
	<!-- 로그인 Mapper (email,pwd Check) -->
	<select id="emailCheck" parameterType="String" resultType="int">
		SELECT COUNT(*) FROM userDTO WHERE email=#{email}
	</select>
	
	<select id="pwdCheck" parameterType="String" resultType="String">
		SELECT pwd FROM userdto WHERE email=#{email}
	</select>
</mapper>








